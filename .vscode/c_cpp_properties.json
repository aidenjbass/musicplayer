{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**",
                "/opt/homebrew/include/**",  // For M1, M2 (Apple Silicon)
                "/usr/local/include/**",    // For Intel-based Macs
                "/opt/homebrew/include/SDL2/**"  // SDL2 path
            ],
            "defines": [],
            "intelliSenseMode": "macos-clang-x64",
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "browse": {
                "path": [
                    "/opt/homebrew/include/**",
                    "${workspaceFolder}/**"
                ],
                "limitSymbolsToIncludedHeaders": true
            }
        }
    ],
    "version": 4
}
